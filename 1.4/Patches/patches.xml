	  <match Class="VCR.PatchOperationXmlSetting">
		<setting>ArrayHeadsetPatch</setting>
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName="Apparel_ArrayHeadset"]/apparel/bodyPartGroups</xpath>
			<value>
