			<xpath>Defs/ThingDef[defName="Apparel_IntegratorHeadset"]/apparel</xpath>
			<value>
				<layers Inherit="False">
					<li>EyeCover</li>
				</layers>
				<forceRenderUnderHair>false</forceRenderUnderHair>
